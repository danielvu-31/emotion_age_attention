{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "train_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_phase": {
        "phase1": 0.001,
        "phase2": 0.0001,
        "phase3": 0.001,
        "phase4": 0.0001,
        "phase5": 0.0001,
        "phase6": 0.0001,
        "weight_decay": 1e-6
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "trainer": {
        "start_epoch": 0,
        "phase_1": 2,
        "phase_2": 10,
        "phase_3": 5,
        "phase_4": 10,
        "phase_5": 10,
        "phase_6": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 0,

        "tensorboard": true
    }
}
